{
  "name": "npm-package-template",
  "version": "0.0.0",
  "description": "An npm package template.",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "index.js",
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
